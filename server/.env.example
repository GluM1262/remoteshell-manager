# Server Environment Configuration
# Copy this file to .env and update values

# Server Settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# TLS/SSL Settings
USE_TLS=false
TLS_CERT_PATH=tls/cert.pem
TLS_KEY_PATH=tls/key.pem
# TLS_CA_PATH=

# Security Settings
ENABLE_COMMAND_WHITELIST=false
MAX_EXECUTION_TIME=30
MAX_COMMAND_LENGTH=1000
ALLOW_SHELL_OPERATORS=false

# User Execution (for systemd service)
RUN_AS_USER=remoteshell
RUN_AS_GROUP=remoteshell

# Allowed Commands (comma-separated, used when whitelist enabled)
# ALLOWED_COMMANDS=ls,pwd,whoami,hostname,uptime,df,du,free,ps,top,cat,grep,find,echo,date

# Blocked Commands (comma-separated, always enforced)
# BLOCKED_COMMANDS=
